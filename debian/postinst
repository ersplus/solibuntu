#!/bin/sh
set -e

#DEBHELPER#

repinstallation="/opt/borne"

# Ensure required dirs
mkdir -p /etc/lightdm/lightdm.conf.d /etc/guest-session /etc/xdg/autostart

# Copy LightDM configs and greeter
if [ -f "$repinstallation/scripts/lightdm.conf.d/50-logout-restoreinvite.conf" ]; then
  cp -f "$repinstallation/scripts/lightdm.conf.d/50-logout-restoreinvite.conf" /etc/lightdm/lightdm.conf.d/50-logout-restoreinvite.conf
fi
if [ -f "$repinstallation/scripts/lightdm/lightdm-gtk-greeter.conf" ]; then
  cp -f "$repinstallation/scripts/lightdm/lightdm-gtk-greeter.conf" /etc/lightdm/lightdm-gtk-greeter.conf
fi

# Guest session skel
ln -sfn /home/gestionnaire /etc/guest-session/skel || true

# Copy autostart
if [ -f "$repinstallation/scripts/sessionStart.desktop" ]; then
  cp -f "$repinstallation/scripts/sessionStart.desktop" /etc/xdg/autostart/sessionStart.desktop
fi

# Plymouth theme
if [ -f "$repinstallation/share/plymouth.tar.gz" ]; then
  cd /usr/share/plymouth/themes/ || exit 0
  tar -xvf "$repinstallation/share/plymouth.tar.gz"
  cat > /usr/share/plymouth/themes/default.plymouth <<EOF
[Plymouth Theme]
Name=solibuntu
Description=Solibuntu theme
ModuleName=script

[script]
ImageDir=/usr/share/plymouth/themes/solibuntu
ScriptFile=/usr/share/plymouth/themes/solibuntu/solibuntu.script
EOF
fi

# Firefox default browser & prefs (paquet classique)
if command -v xdg-settings >/dev/null 2>&1; then
  if [ -f /usr/share/applications/firefox.desktop ]; then
    xdg-settings set default-web-browser firefox.desktop || true
  elif [ -f /var/lib/snapd/desktop/applications/firefox_firefox.desktop ]; then
    xdg-settings set default-web-browser firefox_firefox.desktop || true
  fi
fi
if [ -d /etc/firefox ] && [ -f "$repinstallation/share/firefox/syspref.js" ]; then
  cp -f "$repinstallation/share/firefox/syspref.js" /etc/firefox/syspref.js
fi

# Group and users
if ! getent group Solibuntu >/dev/null; then
  addgroup --system Solibuntu || true
fi
if ! id -u administrateur >/dev/null 2>&1; then
  adduser --disabled-password --gecos "Administrateur Solibuntu" administrateur || true
  adduser administrateur Solibuntu || true
fi
if ! id -u gestionnaire >/dev/null 2>&1; then
  adduser --disabled-password --gecos "Gestionnaire Solibuntu" gestionnaire || true
  adduser gestionnaire Solibuntu || true
fi
chgrp Solibuntu /root/ 2>/dev/null || true
chmod 774 /root/ 2>/dev/null || true

# Sudoers
if [ -f "$repinstallation/share/sudoers" ]; then
  cp "$repinstallation/share/sudoers" /tmp/sudoers.bak
  if visudo -cf /tmp/sudoers.bak; then
    cp /tmp/sudoers.bak /etc/sudoers
  fi
fi

# Feh configuration
if [ -d "$repinstallation/share/feh" ]; then
  cp -r "$repinstallation/share/feh" /etc/
fi

# Set debconf selections when available
if [ -f "$repinstallation/share/setselection.txt" ]; then
  while read -r line; do
    echo "$line" | debconf-set-selections || true
  done < "$repinstallation/share/setselection.txt"
fi

# Restart lightdm if running (optional)
if systemctl is-active --quiet lightdm; then
  systemctl restart lightdm || true
fi

exit 0
